{
    "name": "dhiraj/php-file-manager",
    "description": "A modern, web-based file manager with advanced features like bulk operations, archive handling, and path-based navigation",
    "type": "library",
    "keywords": ["file-manager", "web", "php", "file-browser", "archive", "bulk-operations", "psr-12"],
    "homepage": "https://github.com/dhiraj-nishthatechnosoft/php-file-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhiraj Dhiman",
            "email": "dhiraj@example.com",
            "homepage": "https://github.com/dhiraj-nishthatechnosoft",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/dhiraj-nishthatechnosoft/php-file-manager/issues",
        "source": "https://github.com/dhiraj-nishthatechnosoft/php-file-manager",
        "docs": "https://github.com/dhiraj-nishthatechnosoft/php-file-manager/blob/main/README.md"
    },
    "require": {
        "php": ">=8.0",
        "ext-zip": "*",
        "ext-phar": "*",
        "ext-json": "*",
        "ext-session": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Dhiraj\\PhpFileManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dhiraj\\PhpFileManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Dhiraj\\PhpFileManager\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "Dhiraj\\PhpFileManager\\Installer::postUpdate"
        ],
        "test": "phpunit",
        "phpcs": "phpcs src/ --standard=PSR12",
        "phpstan": "phpstan analyse src/ --level=8",
        "fix-cs": "phpcbf src/ --standard=PSR12"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
